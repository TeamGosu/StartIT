<h1>Listing purchases</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Productquantityid</th>
    <th>Customerid</th>
    <th>Purchasedate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @purchases.each do |purchase| %>
  <tr>
    <td><%= purchase.id %></td>
    <td><%= purchase.productquantityid %></td>
    <td><%= purchase.customerid %></td>
    <td><%= purchase.purchasedate %></td>
    <td><%= link_to 'Show', purchase %></td>
    <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
    <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

